head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width')
    meta(name='description' content='Food website for finding recipes or local options')
    meta(name='author' content= 'Nidhi Reddy')
    title chai tea | Recipes
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    #myHeader.header
        .container
            #branding
                a(href="/main")
                    img(src='/images/website_logo.jpg')
            nav
                ul
                    li
                        a(href='/auth/logout')  log out of twitter
    h1#recipes #{title}

    for results in result.hits
        #recipe
            p#rbox #{results.recipe.label}
            br
            .button
                a(href=results.recipe.url) see recipe
            br
            img(src=results.recipe.image)
            form(action='/restaurant', method = 'post') Restaurants serving this dish:
                input(type='text', name='search', placeholder='Enter your address...', required='')
                input#submit(type='submit', value="Search", name="label", action='/restaurant')


    script.
        window.onscroll = function () {
            myFunction()
        };
        var header = document.getElementById("myHeader");
        var sticky = header.offsetTop;
        function myFunction() {
            if (window.pageYOffset >= sticky) {
                header.classList.add("sticky");
            } else {
                header.classList.remove("sticky");
            }
        }