head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width')
    meta(name='description' content='Food website for finding recipes or local options')
    meta(name='author' content= 'Nidhi Reddy')
    title chai tea | Menu
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    #myHeader.header
        .container
            #branding
                a(href="/main")
                    img(src='/images/website_logo.jpg')
            nav
                ul
                    li
                        a(href='/auth/logout')  log out of twitter
    h1#recipes MENU
    ul
        each val in result
            #menu
            p#rbox #{val.name}
            for results in val.items
                p#menu #{results.name}

    script.
        window.onscroll = function () {
            myFunction()
        };
        var header = document.getElementById("myHeader");
        var sticky = header.offsetTop;
        function myFunction() {
            if (window.pageYOffset >= sticky) {
                header.classList.add("sticky");
            } else {
                header.classList.remove("sticky");
            }
        }


